<div class="container">
    <div class="row">
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-8 text-center">
                    <pre>{{this.id}}.{{this.burger_name}}
					</pre>
                </div>
                <div class="col-md-4 text-center">
                    <form class="devour-form button-size">
                        <input type="hidden" class="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">Devour Dat Burger!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}">
            {{/if}}
            {{/each}}
        </div>

    </div>
</div>
